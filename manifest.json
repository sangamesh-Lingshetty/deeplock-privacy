{
  "manifest_version": 3,
  "name": "DeepLock",
  "version": "3.0",
  "description": "Block distractions. No escape. Track your discipline.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "tabs",
    "identity",
    "management"
  ],
  "oauth2": {
    "client_id": "523486634791-lnhttaq8cob6q42urt60uaouqag4oko6.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "pause.html",
        "dashboard.html",
        "dashboard.css",
        "dashboard.js",
        "chart.min.js",
        "pause.js",
        "blocked.js",
        "supabase.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
